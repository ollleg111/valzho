<android.support.percent.PercentRelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/cv"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/background_light">

    <android.support.v4.view.ViewPager
        android:id="@+id/vp_collection_photo"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:background="#b4f2f3f4"
        android:contentDescription="@string/photo"
        app:layout_widthPercent="40%" />

    <TextView
        android:id="@+id/tv_big_model_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/vp_collection_photo"
        android:gravity="center"
        android:textAllCaps="true"
        android:textSize="24sp"
        tools:text="Name Model" />

    <TextView
        android:id="@+id/tv_big_array_size"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/tv_big_model_name"
        android:layout_toRightOf="@id/vp_collection_photo"
        android:gravity="end"
        android:textSize="12sp"
        tools:text="Size model" />

    <TextView
        android:id="@+id/tv_big_description"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/tv_big_array_size"
        android:layout_toRightOf="@id/vp_collection_photo"
        android:textSize="16sp"
        tools:text="Many description modell!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!11 1!!!!!!!!!!!!!!!!!!!!!!!!" />

</android.support.percent.PercentRelativeLayout>
