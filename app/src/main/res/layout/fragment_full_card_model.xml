<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/cv"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <android.support.percent.PercentRelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="@dimen/activity_vertical_margin">

        <android.support.v4.view.ViewPager
            android:id="@+id/vp_collection_photo"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_centerHorizontal="true"
            android:contentDescription="@string/photo"
            app:layout_heightPercent="50%" />

        <android.support.v7.widget.AppCompatImageButton
            android:id="@+id/arrow_back"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_alignBottom="@id/vp_collection_photo"
            android:background="#01000000"
            android:src="@drawable/ic_ab_back_holo_light_am"
            android:visibility="invisible" />

        <android.support.v7.widget.AppCompatImageButton
            android:id="@+id/arrow_forward"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_alignBottom="@id/vp_collection_photo"
            android:background="#01000000"
            android:rotation="180"
            android:src="@drawable/ic_ab_back_holo_light_am"
            android:visibility="invisible" />

        <TextView
            android:id="@+id/tv_big_model_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/vp_collection_photo"
            android:gravity="center_horizontal"
            android:textAllCaps="true"
            android:textColor="@android:color/black"
            android:textSize="24sp"
            tools:text="Name Model" />

        <TextView
            android:id="@+id/tv_big_array_size"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/tv_big_model_name"
            android:gravity="end"
            android:textSize="12sp"
            tools:text="Size model" />

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@id/tv_big_array_size">

            <TextView
                android:id="@+id/tv_big_description"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:textSize="16sp"
                tools:text="Many description modell!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!11 1!!!!!!!!!!!!!!!!!!!!!!!!" />
        </ScrollView>
    </android.support.percent.PercentRelativeLayout>
</android.support.v7.widget.CardView>